FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      momentGenerationDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

phases
(
    particles
);

boundaries
{
    walls
    {
        type    zeroGradient;
    }
    frontAndBack
    {
        type    empty;
    }
}

particles
{
    type                weightsAndAbscissae;
    weightDimension     [0 0 0 0 0 0 0];
    abscissaDimension   [0 1 -1 0 0 0 0];

    default
    {
        node0
        {
            weight  0.4;
            abscissa (0);
        }
    }

    regions
(
    boxToCell
    {
        box (0 -.1 -.1) (.03 .1 .1);
        node0
        {
            weight  1e-10;
            abscissa (0);
        }
    }
);
}


