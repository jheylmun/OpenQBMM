FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;

W       0.5;
nW      -0.5;
H       0.5;
nH      -0.5;
depth   0.01;

nWPts       100;//#calc "round($W/$cellSize)";
nHPts       100;//#calc "round($H/$cellSize)";

vertices
(
    (   $nW  $nH    0           )   //0
    (   $W   $nH    0           )   //3
    (   $W   $H     0           )   //4
    (   $nW  $H     0           )   //7
    (   $nW  $nH    $depth      )   //16
    (   $W   $nH    $depth      )   //19
    (   $W   $H     $depth      )   //20
    (   $nW  $H     $depth      )   //23
);

blocks
(
    hex (0 1 2 3 4 5 6 7) ($nWPts $nHPts 1) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    bottom
    {
        type            cyclic;
        neighbourPatch  top;
        faces
        (
            (0 1 5 4)
        );
    }
    top
    {
        type            cyclic;
        neighbourPatch  bottom;
        faces
        (
            (3 2 6 7)
        );
    }
    right
    {
        type            cyclic;
        neighbourPatch  left;
        faces
        (
            (0 3 7 4)
        );
    }
    left
    {
        type            cyclic;
        neighbourPatch  right;
        faces
        (
            (1 2 6 5)
        );
    }
);

mergePatchPairs
(
);

